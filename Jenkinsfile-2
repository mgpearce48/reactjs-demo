pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:lts-buster-slim'
                    args '-p 3000:3000'
                }
            }
            steps {
                echo 'building...'
            }
        }
        stage('Test') {
            agent any
            steps {
                echo 'testing...'
            }
        }
        stage('Deliver') {
            agent any
            steps {
                echo 'delivering...'
            }
        }
        // stage('Docker') {
        //     agent any
        //     steps {
        //         echo 'dockering...'
        //         sh 'docker --version'
        //     }
        // }
    }
}
